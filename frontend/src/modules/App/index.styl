.App
	height: 100%
	display: flex
	flex-direction: column
	overflow: hidden

	&__Header
		display: flex
		align-items: center
		padding: 10px 30px
		background: $palette.background
		raised()

	&__Title
		font-size: 1.2em
		color: $palette.accent.color
		text-decoration: none
		white-space: nowrap
		margin-right: 20px

	&__Input
		width: 100%
		padding: .5em 1em
		border: 1px solid $palette.border
		margin-right: 20px

	&__Body
		height: 100%
		padding: 30px
		overflow-y: auto